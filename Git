sudo tee /etc/systemd/system/blackbox_exporter.service > /dev/null <<'EOF'
[Unit]
Description=Blackbox Exporter
After=network.target

[Service]
User=demo
ExecStart=/home/demo/blackbox_exporter-0.27.0.linux-amd64/blackbox_exporter \
  --config.file=/home/demo/blackbox_exporter-0.27.0.linux-amd64/blackbox.yml \
  --web.listen-address=":9115"
Restart=always

[Install]
WantedBy=multi-user.target
EOF
